@model List<ReservaYa.Models.ReservaUsuarioViewModel>

@{
    ViewBag.Title = "Mis Reservas";
}

<div class="container mt-5">
    <h1 class="mb-4 text-center">Gestión de Mis Reservas</h1>
    <hr />

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success" role="alert">@TempData["Mensaje"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger" role="alert">@TempData["Error"]</div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">
            Aún no tienes reservas activas. <a href="@Url.Action("ReservaEspacioVista", "ReservaEspacio")">¡Haz una ahora!</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="thead-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().NombreEspacio)</th>
                        <th>@Html.DisplayNameFor(model => model.First().FechaReserva)</th>
                        <th>@Html.DisplayNameFor(model => model.First().HoraInicio) - @Html.DisplayNameFor(model => model.First().HoraFin)</th>
                        <th>@Html.DisplayNameFor(model => model.First().MontoTotal)</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.NombreEspacio)</td>
                            <td>@Html.DisplayFor(modelItem => item.FechaReserva)</td>
                            <td>
                                @item.HoraInicio.ToString(@"hh\:mm") - @item.HoraFin.ToString(@"hh\:mm")
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.MontoTotal)</td>
                            <td>
                                @if (item.EsPasada)
                                {
                                    <span class="badge badge-secondary" style="background-color: #6c757d; color: white;">Finalizada</span>
                                }
                                else
                                {
                                    <span class="badge badge-success" style="background-color: #28a745; color: white;">Activa</span>
                                }
                            </td>
                            <td>
                                @if (!item.EsPasada)
                                {
                                    // Botón para CANCELAR
                                    using (Html.BeginForm("Cancelar", "GestionReservas", FormMethod.Post, new { style = "display:inline;" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@item.ReservaID" />
                                        <button type="submit" class="btn btn-sm btn-danger"
                                                onclick="return confirm('¿Está seguro de que desea cancelar la reserva de @item.NombreEspacio el @item.FechaReserva.ToShortDateString()?');">
                                            Cancelar
                                        </button>
                                    }
                                }
                                else
                                {
                                    <span>N/A</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@* Estilos básicos para las badges *@
<style>
    .badge {
        padding: .4em .6em;
        font-size: 85%;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        white-space: nowrap;
        vertical-align: baseline;
        border-radius: .25rem;
    }
</style>