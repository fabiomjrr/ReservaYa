@model ReservaYa.Models.Espacios

@{
    ViewBag.Title = "Añadir Imágenes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Añadir Imágenes</h2>

<div>
    <section>
        <header>
            <h3>Información previa</h3>
            <p>Revise los datos del espacio antes de añadir las imágenes.</p>
        </header>

        <div>
            <label>Nombre:</label>
            <p>@Model.Nombre</p>
        </div>

        <div>
            <label>Categoría:</label>
            <input type="text" value="@ViewBag.CategoriaNombre" readonly />
        </div>

        <div>
            <label>Capacidad:</label>
            <p>@Model.Capacidad</p>
        </div>

        <div>
            <label>Dirección:</label>
            <p>@Model.Direccion</p>
        </div>

        <div>
            @Html.CheckBoxFor(m => m.Sanitarios, new { disabled = "disabled" })
            <label>Sanitarios</label>
        </div>

        <div>
            @Html.CheckBoxFor(m => m.Estacionamiento, new { disabled = "disabled" })
            <label>Estacionamiento</label>
        </div>

        <div>
            @Html.CheckBoxFor(m => m.AccesoSillaRuedas, new { disabled = "disabled" })
            <label>Acceso Silla de Ruedas</label>
        </div>
    </section>

    <section>
        @using (Html.BeginForm("CreateAddImages", "GestionEspacios", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.EspacioID)

            <fieldset>
                <legend>Galería</legend>

                <div>
                    <label for="portada01">Imagen 01:</label>
                    <input type="file" name="portada01" id="portada01" />
                </div>

                <!--  más imágenes luego -->
                <!--
                <div>
                    <label for="imagenes">Otras Imágenes:</label>
                    <input type="file" name="imagenes" id="imagenes" multiple />
                </div>
                -->
            </fieldset>

            <div>
                <button type="submit">Guardar Imágenes</button>
                <a href="@Url.Action("Index")">Finalizar</a>
            </div>
        }
    </section>
</div>
